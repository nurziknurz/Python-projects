#Robot Test with camera for interaction

import cv2


#face_cascade = cv2.CascadeClassifier('haarcascade_frontalface_default.xml') - This does not work for some reason

face_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + "haarcascade_frontalface_default.xml") #This is the line that works

image = cv2.imread('TestPhoto_02.jpg')

gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)

faces = face_cascade.detectMultiScale(gray, scaleFactor= 1.1, minNeighbors= 18, minSize=(70, 70))

faces_detected = "Лиц обнаружено: " + format(len(faces))

print(faces)

print(faces_detected)

# Рисуем квадраты вокруг лиц
for (x, y, w, h) in faces:
    cv2.rectangle(image, (x, y), (x+w, y+h), (255, 155, 0), 4)

cv2.imshow("faces", image)

cv2.waitKey(0)

cv2.destroyAllWindows()
