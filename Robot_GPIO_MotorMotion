#PIN 18 as PWM for speed control
#PIN 24 as 0/1 for direction control

import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BCM)
GPIO.setup(24, GPIO.OUT)
GPIO.setup(18, GPIO.OUT)

p = GPIO.PWM(18, 100)
p.start(0)

for x in range (0,2):
    
    print("Move forward")

    p.ChangeDutyCycle(100)

    GPIO.output(24, GPIO.HIGH)
    time.sleep(2)

    p.ChangeDutyCycle(0)

    print("Move backward")

    p.ChangeDutyCycle(20)
    GPIO.output(24, GPIO.LOW)
    time.sleep(2)

    p.ChangeDutyCycle(0)

    time.sleep(2)

GPIO.cleanup()

def CheckSurrounding():

  if sensor_right or sensor_left or sensor_center == 1:

     obstacle = True
  else: obstacle = False

  return obstacle


def TurnRight():

  MOTORS RIGHT

  time.sleep(1)


def MoveForward():

  MotorsOn()

  time.sleep(2)

  MotorsOff()

  return


def MotorsOn():

  TURN MOTORS ON

  return


def MotorsOff():

  TURN MOTORS OFF

  return




import time

INITIALISE SENSORS AND MOTORS

while True:

  if_obstacle = CheckSurrounding()

  if if_obstacle == True:

    TurnRight()

  else:

    MoveForward()




import time

INITIALISE SENSORS AND MOTORS

MotorsOff()

while True:

  while True:

    MotorsOn()

    if_obstacle = CheckSurrounding()

    if if_obstacle == True:

      MotorsOff()

      break

  TurnRight()


    







    
